@model DSW1.Proyecto_Tienda_Zapatillas.Web.Models.Acceso.RegistroColaborador

@{
    ViewData["Title"] = "RegistroColaborador";
}


@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/88862e25c2.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />





<div class=" d-flex ">



    <div class="d-inline-block vh-100 flex-shrink-1 p-3 align-items-center flex-shrink-1 justify-content-center d-flex flex-column shadow"
         style="background-color: #B0B9BF; width: 90vw;">


        <img src="/Img/Colaborador.png" class=" w-75 " />

    </div>

    <div class="login d-flex justify-content-center container align-items-center shadow-lg" style="background-color: #EDEFF0">
        <div class="w-50 p-3 d-flex flex-column rounded-3 bg-opacity-75 shadow cajaLogin">
            <h1 class="text-center">Registro</h1>

            <hr />
            <div class="d-flex flex-column justify-conten flex-grow-1">
                <div class="row justify-content-center mb-2 flex-grow-1">
                    <div class="col-md-10">
                        <form asp-action="RegistroColaborador">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="">


                                @if (ViewBag.Mensaje != null)
                                {
                                    <div class="alert alert-info">
                                        @ViewBag.Mensaje
                                    </div>
                                }


                                <span class="fw-bold">DNI</span>

                                <div class="input-group mb-3  has-validation border-bottom border-1 border-dark">

                                    <span class="input-group-text mb-0 pb-0 p-1 border-0 bg-transparent"><i class="fa-solid fa-id-card"></i></span>

                                    <div class="form-control border-0 bg-transparent d-flex align-items-center">
                                        <input asp-for="DNI" class=" mb-0 border-0 p-0 bg-transparent w-100" placeholder="Ingrese su DNI" style="outline:none " />
                                        <label asp-for="DNI" hidden></label>




                                    </div>
                                    <div class="invalid-feedback">

                                        <span asp-validation-for="DNI" class="text-danger"></span>

                                    </div>
                                </div>

                            </div>

                            <div class="">

                                <span class="fw-bold">Email</span>

                                <div class="input-group mb-3  has-validation border-bottom border-1 border-dark">

                                    <span class="input-group-text mb-0 pb-0 p-1 border-0 bg-transparent"><i class="fa-solid fa-envelope"></i></span>

                                    <div class="form-control border-0 bg-transparent d-flex align-items-center">
                                        <input asp-for="Email" class=" mb-0 border-0 p-0 bg-transparent w-100 " placeholder="name@example.com" style="outline:none " />
                                        <label asp-for="Email" hidden></label>


                                    </div>
                                    <div class="invalid-feedback">

                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>
                                </div>

                            </div>


                            <div class="">

                                <span class="fw-bold">Contraseña</span>

                                <div class="input-group mb-3  has-validation border-bottom border-1 border-dark">

                                    <span class="input-group-text mb-0 pb-0 p-1 border-0 bg-transparent"><i class="fa-solid fa-lock"></i></span>

                                    <div class="form-control border-0 bg-transparent d-flex align-items-center">
                                        <input asp-for="Clave" class=" mb-0 border-0 p-0 bg-transparent w-100 " placeholder="Ingrese su Clave" style="outline:none " />
                                        <label asp-for="Clave" hidden></label>


                                    </div>
                                    <div class="invalid-feedback">

                                        <span asp-validation-for="Clave" class="text-danger"></span>

                                    </div>
                                </div>

                            </div>


                            <div class="d-flex justify-content-between mb-4">
                                <input type="submit" value="Registrarse" class="btn btn-primary" />
                                <a asp-action="IniciarSesionUsuarioColaborador" class="btn btn-primary">Iniciar Sesion</a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="d-flex  align-items-end">
                    <div class="d-flex justify-content-between flex-grow-1">

                        <span>¿Ya tienes cuenta?</span>
                        <a asp-action="IniciarSesionUsuarioColaborador">Iniciar Sesion</a>

                    </div>
                </div>
            </div>

            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }
            }



        </div>
    </div>

</div>